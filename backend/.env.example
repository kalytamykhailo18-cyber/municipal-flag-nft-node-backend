# =============================================================================
# Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# Environment
NODE_ENV=development

# Server
PORT=8000
HOST=0.0.0.0
API_PREFIX=/api

# Project
PROJECT_NAME=Municipal Flag NFT Game

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/nft_flag_game
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nft_flag_game
DB_USER=postgres
DB_PASSWORD=password
DB_LOGGING=false
DB_POOL_MAX=5
DB_POOL_MIN=0
